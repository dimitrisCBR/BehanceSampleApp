<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	package="com.cbr.behance">

	<application
		android:name="com.cbr.behance.BehanceSampleApplication"
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:networkSecurityConfig="@xml/network_sec_config"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:supportsRtl="true"
		android:theme="@style/AppTheme"
		tools:ignore="GoogleAppIndexingWarning">

		<activity
			android:name="com.cbr.behance.home.HomeActivity"
			android:theme="@style/AppTheme">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity
			android:name=".project.detail.ProjectDetailsActivity"
			android:theme="@style/AppTheme.Transparent.ProjectDetails" />


		<uses-library
			android:name="android.test.runner"
			android:required="false" />

	</application>

	<uses-permission android:name="android.permission.INTERNET" />
</manifest>
