<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="@dimen/xsmall">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_behace_user_item"
            android:scaleType="centerCrop"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height_thin"
            android:background="@color/brown_light"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/xsmall"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                style="@style/AppTheme.Text.Body_1"
                android:id="@+id/titleTextView"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Ryan Lau"/>

            <TextView
                style="@style/AppTheme.Text.Subtitle_2"
                android:id="@+id/subtitleTextView"
                android:textColor="@color/text_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                tools:text="Designer"/>

            <View
                android:id="@+id/infoDivider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height_thin"
                android:layout_marginTop="@dimen/xsmall"
                android:background="@color/text_grey_80"/>

            <TextView
                style="@style/AppTheme.Text.Body_2"
                android:id="@+id/extraTextView"
                android:textColor="@color/text_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xsmall"
                android:maxLines="1"
                tools:text="San Fransisco, California, USA"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>