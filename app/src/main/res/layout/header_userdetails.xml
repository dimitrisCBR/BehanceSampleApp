<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:id="@+id/header_userdetails_root"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:layout_scrollFlags="exitUntilCollapsed"
             app:layout_collapseMode="parallax"
             android:fitsSystemWindows="true"
             tools:background="@color/brown_light">

    <ImageView
        android:id="@+id/header_userdetails_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <View
        android:id="@+id/header_userdetails_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="?attr/actionBarSize"
        android:gravity="center">


        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/header_userdetails_image"
            android:scaleType="fitCenter"
            android:layout_height="@dimen/image_medium"
            android:layout_width="@dimen/image_medium"
            android:layout_marginTop="?attr/actionBarSize"
            app:riv_corner_radius="30dip"
            app:riv_border_width="0dp"
            app:riv_mutate_background="true"/>

        <TextView
            android:id="@+id/header_userdetails_occuation"
            style="@style/BehanceSample.Text.Subtitle.1"
            android:textColor="@android:color/white"
            android:padding="@dimen/xsmall"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small"
            tools:text="First and Last Name"/>

        <TextView
            android:id="@+id/header_userdetails_fields"
            style="@style/BehanceSample.Text.Subtitle.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/xsmall"
            tools:text="Ux, Design, Branding"/>

        <TextView
            android:id="@+id/header_userdetails_date"
            style="@style/BehanceSample.Text.Body.2"
            android:gravity="center_horizontal"
            android:padding="@dimen/xsmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="First and Last Name"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/header_userdetails_followers"
                style="@style/BehanceSample.Text.Body.2"
                android:gravity="center"
                android:padding="@dimen/xsmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/xsmall"
                tools:text="10.000"/>

            <TextView
                android:id="@+id/header_userdetails_appreciations"
                style="@style/BehanceSample.Text.Body.2"
                android:gravity="center"
                android:padding="@dimen/xsmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/xsmall"
                tools:text="300"/>

            <TextView
                android:id="@+id/header_userdetails_views"
                style="@style/BehanceSample.Text.Body.2"
                android:gravity="center"
                android:padding="@dimen/xsmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/xsmall"
                tools:text="103.000"/>

        </LinearLayout>


    </LinearLayout>
</FrameLayout>
